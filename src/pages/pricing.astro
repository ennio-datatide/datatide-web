---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Unlock the Next Level of Data Insights"
    subtitle="Flexible pricing that adapts to your project needs—whether hourly or per project."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our Pricing"
    subtitle="Pay only for what you truly need"
    prices={[
      {
        title: 'Hourly Rate',
        subtitle: 'Ideal for short-term engagements or consultations',
        price: 'Hourly',
        period: 'per hour',
        items: [
          {
            description: 'Expert guidance on data integration and management.',
          },
          {
            description: 'Customized solutions tailored to your specific needs.',
          },
          {
            description: 'Comprehensive support throughout your project lifecycle.',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Inquire Now',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'Most Flexible',
      },
      {
        title: 'Project-Based Pricing',
        subtitle: 'Optimal choice for larger, ongoing projects',
        price: 'Fixed',
        period: 'per project',
        items: [
          {
            description: 'In-depth consultation to define project scope and goals.',
          },
          {
            description: 'End-to-end support from integration to implementation.',
          },
          {
            description: 'Scalable solutions designed to evolve with your business.',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Discuss Your Project',
          href: '#',
        },
        hasRibbon: false,
        ribbonTitle: 'Most Flexible',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Why Choose DataTide?"
    subtitle="Experience the advantages of our tailored pricing approach"
    columns={2}
    items={[
      {
        title: 'Custom Solutions',
        description: 'Personalized pricing plans that adapt to your project scope and budget.',
        icon: 'tabler:users',
      },
      {
        title: 'Transparent Costs',
        description: 'Clear and upfront pricing with no hidden fees—what you see is what you pay.',
        icon: 'tabler:clipboard-check',
      },
      {
        title: 'Secure Payments',
        description: 'Safeguarded payment methods to ensure a smooth transaction experience.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Immediate Access',
        description: 'Get started right away, with no delays or long waiting periods.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Upgrade Options',
        description: 'Easily transition between pricing options as your needs grow.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: 'Dedicated Support',
        description: '24/7 access to our knowledgeable support team for any questions or concerns.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Your Path to Data Excellence"
    tagline="A simplified journey to your tailored solutions"
    isReversed={true}
    items={[
      {
        title: 'Contact Us',
        icon: 'tabler:number-1',
      },
      {
        title: 'Discuss Your Needs',
        icon: 'tabler:number-2',
      },
      {
        title: 'Receive a Custom Proposal',
        icon: 'tabler:number-3',
      },
      {
        title: 'Choose Your Pricing Plan',
        icon: 'tabler:number-4',
      },
      {
        title: 'Get Started',
        icon: 'tabler:number-5',
      },
      {
        title: 'Achieve Your Goals',
        icon: 'tabler:number-6',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />
  
  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to Transform Your Data Journey?"
    subtitle="Join a growing community of clients who have enhanced their operations with DataTide."
    actions={[
      {
        variant: 'primary',
        text: 'Get Started Today',
        href: '/contact',
      },
    ]}
  />
</Layout>
