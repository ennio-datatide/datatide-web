---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="Elevate Your Data Journey with DataTide"
    subtitle="Empowering businesses with innovative, scalable data engineering solutions."
    actions={[{ variant: 'primary', target: '_blank', text: 'Discover Our Services', href: '/' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?q=80&w=815&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'DataTide Hero Image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="What DataTide Offers"
    subtitle="Explore our core services designed to transform your data landscape."
    columns={3}
    items={[
      {
        title: 'Data Architecture',
        description: 'Tailored platforms that ensure scalability and performance, aligning with your business goals.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Generative AI Solutions',
        description: 'Integrating advanced AI capabilities to turn insights into strategic advantages.',
        icon: 'tabler:components',
      },
      {
        title: 'Best Practice Implementation',
        description: 'Robust systems built on industry standards for security, efficiency, and growth.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Performance Optimization',
        description: 'Enhancing operational efficiency for seamless data experiences and user satisfaction.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Governance & Compliance',
        description: 'Ensuring data integrity with rigorous standards that meet regulatory requirements.',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Cloud Migration',
        description: 'Expertly guiding your transition to the cloud for enhanced scalability and flexibility.',
        icon: 'tabler:cloud-upload',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Unmatched Engineering Excellence',
        description: 'Harnessing industry-leading expertise to deliver innovative data solutions that drive exceptional results and empower your business.',
        icon: 'tabler:wand',
      },
      {
        title: 'Scalable Cloud Solutions',
        description: 'Personalized services designed to meet the unique needs of your business.',
        icon: 'tabler:settings',
      },
      {
        title: 'Modern Data Architecture',
        description: 'Robust and scalable architectures that serve as the backbone of your data strategy.',
        icon: 'tabler:presentation',
      },
      {
        title: 'Customer-centric approach',
        description: 'Your needs are at the center of our operations, ensuring tailored solutions that enhance your success.',
        icon: 'tabler:carousel-horizontal',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1636633762833-5d1658f1e29b?q=80&w=739&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Features Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">What makes us different?</h3>
    </Fragment>
  </Content>
  
  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started with DataTide',
        href: '/contact',
      },
    ]}
    title="Unlock Your Data Potential"
    subtitle="Join us in transforming your data strategy and achieving remarkable results."
  />
</Layout>
